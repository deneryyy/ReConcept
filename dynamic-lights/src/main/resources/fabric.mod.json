{
  "schemaVersion": 1,
  "id": "recodynlights",
  "version": "${version}",
  "name": "ReCoDynLights",
  "description": "An utility mod providing dynamic light engine for ReConcept's use. Based on LambDynamicLights by LambdAurora",
  "authors": ["Denery", "LambdAurora"],
  "contact": {
    "repo": "https://github.com/deneryyy/ReConcept",
    "issues": "https://github.com/deneryyy/ReConcept/issues"
  },
  "license": "MIT",
  "environment": "client",
  "entrypoints": {
    "client": [
      "moe.denery.recodynlights.ReCoDynLights"
    ]
  },
  "mixins": [
    "recodynlights.mixins.json"
  ],
  "icon": "assets/reconcept/icon.png",
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "Original Mod": "https://github.com/LambdAurora/LambDynamicLights/"
      },
      "parent": {
        "id": "reconcept",
        "name": "ReConcept",
        "description": "Reconceptualizing Minecraft survival experience",
        "icon": "assets/reconcept/icon.png"
      },
      "update_checker": true
    }
  }
}
